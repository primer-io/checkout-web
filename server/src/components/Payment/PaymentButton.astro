---
type Props = astroHTML.JSX.IntrinsicElements['button'];
---

<button {...Astro.props}>Pay</button>

<style lang="scss">
  button {
    background-color: hsl(0, 0%, 90%);
    border: 0;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    height: 48px;
    padding: 16px;
    transition: background-color 0.15s;

    &:hover {
      background-color: hsl(0, 0%, 85%);
    }

    &:active {
      background-color: hsl(0, 0%, 80%);
    }
  }
</style>
